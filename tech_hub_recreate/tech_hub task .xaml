        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tech_hub_recreate"
        mc:Ignorable="d"
        Title="tech_hub task" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="727*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer HorizontalAlignment="Left" Margin="0,0,-8,0" Width="800" Height="auto" RenderTransformOrigin="0.492,0.514" Background="#FF959595" Grid.ColumnSpan="2">
